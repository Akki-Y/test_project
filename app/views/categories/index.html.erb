<h1> Categories </h1>
<%=link_to "New Category", new_category_path%>
<br>
<%= link_to "Posts Page", posts_path%>
<br>
<br>
<table>
   <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
<tbody>  
<%@categories.each do|category| %>
  <tr>
    <td><%=category.id%></td>
    <td><%=category.category_name%></td>
    <td>
    <%=link_to "edit", edit_category_path(category.id)%>
    <%=link_to "delete", category_path(category.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure'}%>
    </td>
  </tr>
  <%end%>
</tbody> 
</table>